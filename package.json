{
    "name": "easytank",
    "version": "1.0.1",
    "private": true,
    "repositoryUrl": "https://github.com/baudom/easytank",
    "author": {
        "name": "baudom",
        "url": "https://github.com/baudom"
    },
    "scripts": {
        "dev": "next dev",
        "build": "yarn pull:translations && next build",
        "start": "next start",
        "lint": "next lint --max-warnings=0",
        "prettify": "prettier --write .",
        "gen:docker-compose": "sed -e \"s/{IMAGE_NAME}/$npm_package_name/g\" -e \"s/{IMAGE_VERSION}/$npm_package_version/g\" docker-compose.template.yaml > docker-compose.yaml",
        "pull:translations": "tolgee login $TOLGEE_API_KEY -au $TOLGEE_URL; tolgee pull -p $TOLGEE_PID -o ./i18n",
        "postversion": "yarn gen:docker-compose; yarn pull:translations"
    },
    "dependencies": {
        "@mantine/core": "^7.2.1",
        "@mantine/form": "^7.2.2",
        "@mantine/hooks": "^7.2.1",
        "@mantine/notifications": "^7.2.2",
        "@tabler/icons-react": "^2.40.0",
        "@tolgee/format-icu": "5.17.0",
        "@tolgee/react": "5.17.0",
        "next": "14.0.2",
        "next-intl": "3.3.1",
        "react": "^18",
        "react-dom": "^18"
    },
    "devDependencies": {
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/commit-analyzer": "^11.1.0",
        "@semantic-release/git": "^10.0.1",
        "@semantic-release/github": "^9.2.3",
        "@semantic-release/npm": "^11.0.1",
        "@semantic-release/release-notes-generator": "^12.1.0",
        "@tolgee/cli": "1.3.2",
        "@types/node": "^20",
        "@types/react": "^18",
        "@types/react-dom": "^18",
        "eslint": "^8",
        "eslint-config-mantine": "^3.0.0",
        "eslint-config-next": "14.0.2",
        "eslint-plugin-prettier": "^5.0.1",
        "eslint-plugin-react-hooks": "^4.6.0",
        "postcss": "^8.4.31",
        "postcss-preset-mantine": "^1.9.1",
        "postcss-simple-vars": "^7.0.1",
        "prettier": "^3.1.0",
        "semantic-release": "^22.0.8",
        "typescript": "^5"
    }
}
